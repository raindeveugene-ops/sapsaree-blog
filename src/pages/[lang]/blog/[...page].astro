---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../../components/BaseHead.astro';
import CategoryBadge from '../../../components/CategoryBadge.astro';
import CategoryFilter from '../../../components/CategoryFilter.astro';
import Footer from '../../../components/Footer.astro';
import FormattedDate from '../../../components/FormattedDate.astro';
import Header from '../../../components/Header.astro';
import Pagination from '../../../components/Pagination.astro';
import type { Lang, Category } from '../../../consts';
import { getSiteTitle, getSiteDescription } from '../../../consts';
import { t } from '../../../i18n/utils';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
	const allPosts = await getCollection('blog');
	const langs: Lang[] = ['ko', 'en'];
	const routes: any[] = [];

	for (const lang of langs) {
		const langPosts = allPosts
			.filter((p) => p.data.lang === lang)
			.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

		routes.push(
			...paginate(langPosts, {
				params: { lang },
				pageSize: 6,
			})
		);
	}

	return routes;
};

const { lang } = Astro.params as { lang: Lang };
const { page } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead
			title={`${t(lang, 'nav.blog')} - ${getSiteTitle(lang)}`}
			description={getSiteDescription(lang)}
			{lang}
		/>
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: var(--text);
				line-height: 1;
			}
			.date {
				margin: 0;
				color: var(--text-muted);
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: var(--accent);
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			.empty {
				text-align: center;
				color: var(--text-muted);
				padding: 3em 0;
			}
			[data-posts] li[hidden] {
				display: none;
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header {lang} />
		<main>
			<h1>{t(lang, 'nav.blog')}</h1>
			<CategoryFilter {lang} />
			{page.data.length > 0 ? (
				<section>
					<ul data-posts>
						{page.data.map((post: any) => (
							<li data-category={post.data.category}>
								<a href={`/${lang}/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} {lang} />
									</p>
									<CategoryBadge category={post.data.category as Category} {lang} />
								</a>
							</li>
						))}
					</ul>
				</section>
			) : (
				<p class="empty">{lang === 'ko' ? '아직 작성된 글이 없습니다.' : 'No posts yet.'}</p>
			)}
			<Pagination {page} />
		</main>
		<Footer {lang} />
		<script>
			function initCategoryFilter() {
				const params = new URLSearchParams(window.location.search);
				const category = params.get('category');
				const items = document.querySelectorAll<HTMLLIElement>('[data-posts] li[data-category]');
				const links = document.querySelectorAll<HTMLAnchorElement>('.category-filter a');

				// Filter posts
				items.forEach((li) => {
					if (!category || li.dataset.category === category) {
						li.hidden = false;
					} else {
						li.hidden = true;
					}
				});

				// Highlight active link
				links.forEach((a) => {
					const url = new URL(a.href);
					const linkCat = url.searchParams.get('category');
					a.classList.toggle('active', linkCat === category || (!linkCat && !category));
				});

				// Show empty message if all filtered out
				const visible = document.querySelectorAll('[data-posts] li:not([hidden])');
				const emptyEl = document.querySelector('.empty');
				if (visible.length === 0 && !emptyEl) {
					const ul = document.querySelector('[data-posts]');
					if (ul) {
						const p = document.createElement('p');
						p.className = 'empty';
						p.textContent = document.documentElement.lang === 'ko' ? '해당 카테고리에 글이 없습니다.' : 'No posts in this category.';
						ul.parentElement?.appendChild(p);
					}
				}
			}
			initCategoryFilter();
		</script>
	</body>
</html>
