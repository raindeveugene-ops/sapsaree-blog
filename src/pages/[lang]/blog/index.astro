---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../../components/BaseHead.astro';
import CategoryBadge from '../../../components/CategoryBadge.astro';
import CategoryFilter from '../../../components/CategoryFilter.astro';
import Footer from '../../../components/Footer.astro';
import FormattedDate from '../../../components/FormattedDate.astro';
import Header from '../../../components/Header.astro';
import type { Lang, Category } from '../../../consts';
import { getSiteTitle, getSiteDescription } from '../../../consts';
import { t } from '../../../i18n/utils';

export function getStaticPaths() {
	return [{ params: { lang: 'ko' } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params as { lang: Lang };
const category = Astro.url.searchParams.get('category');

const posts = (await getCollection('blog'))
	.filter((p) => p.data.lang === lang)
	.filter((p) => !category || p.data.category === category)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead
			title={`${t(lang, 'nav.blog')} - ${getSiteTitle(lang)}`}
			description={getSiteDescription(lang)}
			{lang}
		/>
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: var(--text);
				line-height: 1;
			}
			.date {
				margin: 0;
				color: var(--text-muted);
			}
			/* category badge styles moved to CategoryBadge component */
			ul li a:hover h4,
			ul li a:hover .date {
				color: var(--accent);
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			.empty {
				text-align: center;
				color: var(--text-muted);
				padding: 3em 0;
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header {lang} />
		<main>
			<h1>{t(lang, 'nav.blog')}</h1>
			<CategoryFilter {lang} current={category ?? undefined} />
			{posts.length > 0 ? (
				<section>
					<ul>
						{posts.map((post) => (
							<li>
								<a href={`/${lang}/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} {lang} />
									</p>
									<CategoryBadge category={post.data.category as Category} {lang} />
								</a>
							</li>
						))}
					</ul>
				</section>
			) : (
				<p class="empty">{lang === 'ko' ? '아직 작성된 글이 없습니다.' : 'No posts yet.'}</p>
			)}
		</main>
		<Footer {lang} />
	</body>
</html>
