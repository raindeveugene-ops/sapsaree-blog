---
import type { Lang } from '../consts';

interface Props {
	date: Date;
	lang?: Lang;
}

const { date, lang = 'ko' } = Astro.props;
const locale = lang === 'ko' ? 'ko-KR' : 'en-US';
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
